{
    "compilerOptions": {
        "experimentalDecorators": true,
        "target": "es6",
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "allowJs": true,
        "strict": true,
        "useDefineForClassFields": false,
        "allowSyntheticDefaultImports": true
    },
    "include": ["**/*.ts"]
}
