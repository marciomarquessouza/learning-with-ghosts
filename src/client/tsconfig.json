{
    "compilerOptions": {
        "experimentalDecorators": true,
        "skipLibCheck": true,
        "target": "es6",
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "allowJs": true,
        "strict": true,
        "useDefineForClassFields": false,
        "allowSyntheticDefaultImports": true,
        "jsx": "react"
    },
    "include": ["**/*.ts", "**/*.tsx"],
    "exclude": [
        "node_modules",
        "./node_modules",
        "./node_modules/*",
        "./node_modules/@types/node/index.d.ts"
    ]
}
